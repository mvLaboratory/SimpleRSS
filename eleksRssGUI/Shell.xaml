<Window x:Class="eleksRssGUI.Shell"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="ShellWindow"
        Title="Eleks RSS reader" Height="600" Width="900">

        <Border Padding="10" x:Name="WindowBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <ItemsControl Name="MainRegion" prism:RegionManager.RegionName="MainRegion"/>
            <ItemsControl  Grid.Row="1" Name="PagingRegion" prism:RegionManager.RegionName="PagingRegion"/>
        </Grid>
    </Border>
</Window>
