<Window x:Class="eleksRssGUI.Shell"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#333333"
        x:Name="ShellWindow"
        Title="Eleks RSS reader" Height="600"  Width="900">

    <!--<Border Padding="5" x:Name="WindowBorder" VerticalAlignment="Stretch">-->
        <Grid VerticalAlignment="Stretch" Background="#333333">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <ContentControl Name="MainRegion" prism:RegionManager.RegionName="MainRegion" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
            <ItemsControl Grid.Row="1" Name="PagingRegion" prism:RegionManager.RegionName="PagingRegion"/>
        </Grid>
    <!--</Border>-->
</Window>
